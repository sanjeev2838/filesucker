.container
  .row
    .span6
      .register-info-wraper
        #register-info
          %h1 You are about 30 seconds away from using this awesome File Sucker app. Good choice!
          %ul{:dir => "rtl"}
            %li Blah blah blah
            %li That's why this app is so awesome
            %li !So register, like, right NOW
            %li Or don't, who cares
    .span6
      #register-wraper
        = form_for(resource, as: resource_name,id: 'register-form',class: 'form', url: registration_path(resource_name)) do |f|
          %legend
            Register to
            %span.blue File Sucker
          .body
            -#Todo add fields for first name and lastname later on
            / first name
            -#.control-group.control-inline
            -#  %label{:for => "name"} Email
            -#  %input.input-medium{:name => "name", :type => "text"}
            -#/ last name
            -#.control-group.control-inline
            -#  %label{:for => "surname"} Password
            -#  %input.input-medium{:name => "surname", :type => "text"}
            / username
            %label E-mail
            = f.email_field :email, autofocus: true, class: 'input-huge'

            %label Password
            = f.password_field :password, autocomplete: "off", class: 'input-huge'

            %label Password-confirmation
            = f.password_field :password_confirmation, autocomplete: "off", class: 'input-huge'
          .footer
            %label.checkbox.inline
              %input#inlineCheckbox1{:type => "checkbox", :value => "option1"}
                I agree to something I will never read
            = f.submit "Register", class: 'button btn btn-success', type: 'submit'

